@page
@model IndexModel
@{
	ViewData["Title"] = "Home";
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>Library - Home</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
	<div class="container">
		<a class="navbar-brand" href="#">Library</a>
		<div>
			<span class="me-3">Hello, @Model.DisplayName</span>
			<form method="post" asp-page="/Auth/Logout" class="d-inline">
				<button type="submit" class="btn btn-outline-danger btn-sm">Sign out</button>
			</form>
		</div>
	</div>
</nav>

<div class="container py-5">
	<h2>Dashboard</h2>
	<p class="lead">Welcome to the library dashboard. This page is shown after login.</p>

	<div class="card">
		<div class="card-body">
			<p><strong>User:</strong> @Model.Email</p>
			<p><strong>Role:</strong> Mocked user</p>
			<p>This is a frontend template — you can now add UI for books, members, loans, etc.</p>
		</div>
	</div>
</div>
</body>
</html>