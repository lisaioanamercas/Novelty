@page
@model Novelty.Pages.Auth.RegisterModel
@{
	Layout = "_AuthLayout";
	ViewData["Title"] = "Register";
}

<div class="auth-card card shadow-sm">
	<div class="card-body">
		<div class="text-center mb-4">
			<div class="auth-logo mb-2">B</div>
			<h4 class="mb-0">Create Account</h4>
			<p class="text-muted small">This is a mocked register page for the frontend template</p>
		</div>

		@if (Model.SuccessMessage != null)
		{
			<div class="alert alert-success">@Model.SuccessMessage</div>
		}

		<form method="post">
			<div class="mb-3">
				<label class="form-label">Full name</label>
				<input asp-for="Input.FullName" class="form-control" />
			</div>

			<div class="mb-3">
				<label class="form-label">Email</label>
				<input asp-for="Input.Email" class="form-control" />
			</div>

			<div class="mb-3">
				<label class="form-label">Password</label>
				<input asp-for="Input.Password" type="password" class="form-control" />
			</div>

			<button type="submit" class="btn btn-primary w-100">Register (mock)</button>
		</form>

		<div class="mt-3 text-center">
			<a asp-page="/Auth/Login">Back to login</a>
		</div>
	</div>
</div>