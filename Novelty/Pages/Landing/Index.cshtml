@page
@model Novelty.Pages.Landing.IndexModel
@{
	Layout = null;
	ViewData["Title"] = "Library Landing";
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>Library - Landing</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-white">
	<div class="container py-5">
		<div class="row align-items-center">
			<div class="col-md-6">
				<h1>Welcome to Your Library</h1>
				<p class="lead">A simple book library management frontend template. Sign in to manage books, members and loans.</p>
				<a class="btn btn-primary me-2" asp-page="/Auth/Login">Sign In</a>
				<a class="btn btn-outline-secondary" asp-page="/Auth/Register">Register</a>
			</div>
			<div class="col-md-6 text-center">
				<img src="https://via.placeholder.com/420x260?text=Books" class="img-fluid rounded" alt="Books" />
			</div>
		</div>
	</div>
</body>
</html>